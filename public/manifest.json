{
    "name": "Elden All",
    "description": "Elden Ring experience for Git platforms (GitHub, GitLab, and more)",
    "version": "1.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "assets/elden-all-16.png",
        "48": "assets/elden-all-48.png",
        "128": "assets/elden-all-128.png"
    },
    "permissions": ["webRequest", "tabs", "storage"],
    "host_permissions": ["https://github.com/*", "https://gitlab.com/*", "https://mail.google.com/*", "https://*/*"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*", "https://gitlab.com/*", "https://mail.google.com/*", "https://*/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": ["banners/*"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["sounds/*"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["assets/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
